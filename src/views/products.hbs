<h2 class='text-center'>{{name}}</h2>
<div class='container-slider'>
    <div
      id='carouselExampleSlidesOnly'
      class='carousel slide'
      data-bs-ride='carousel'
    >
      <div class='carousel-inner'>
        <div class='carousel-item active'>
          <img
            src='https://picsum.photos/1200/700?random={{firstUrl.id}}'
            class='d-block w-100'
            width='600'
            height='400'
          />
        </div>
        {{#each urls}}
          <div class='carousel-item'>
            <img
              src='https://picsum.photos/1200/700?random={{this.id}}'
              class='d-block w-100'
              width='600'
              height='400'
            />
          </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>

<div class='container'>
  <h2 class='text-center'>Описание</h2>
  <p>{{desc}}</p>
</div>
